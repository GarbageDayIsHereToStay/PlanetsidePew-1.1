<Defs>
<!--■■■■■■■■■■■■■■■■■■VANUSOVEREIGNTYBOMB-VANUSOVEREIGNTYBOMB-VANUSOVEREIGNTYBOMB■■■■■■■■■■■■■■■■■■■■■■■-->
<DamageDef Name="VSBOMBBASE">
<defName>VSBOMB</defName>
    <label>VS bomb</label>
    <workerClass>Firecracker.DamageWorker_BombNoCamShake</workerClass>
    <externalViolence>true</externalViolence>
    <isExplosive>true</isExplosive>
    <deathMessage>{0} has died in an explosion.</deathMessage>
    <hediff>Burn</hediff>
    <hediffSkin>Burn</hediffSkin>
    <hediffSolid>Shredded</hediffSolid>
    <harmAllLayersUntilOutside>true</harmAllLayersUntilOutside>
    <impactSoundType>Blunt</impactSoundType>
    <armorCategory>Sharp</armorCategory>
    <minDamageToFragment>15</minDamageToFragment>
    <defaultDamage>10</defaultDamage>
    <defaultStoppingPower>0.5</defaultStoppingPower>
    <defaultArmorPenetration>0.10</defaultArmorPenetration>
    <buildingDamageFactor>4</buildingDamageFactor>
    <plantDamageFactor>4</plantDamageFactor>
    <explosionAffectOutsidePartsOnly>false</explosionAffectOutsidePartsOnly>
    <explosionHeatEnergyPerCell>5</explosionHeatEnergyPerCell>
    <explosionCellMote>Mote_BlastDry</explosionCellMote>
    <explosionColorCenter>(0.1,1,1)</explosionColorCenter>
    <explosionColorEdge>(0.1,0.9,0.9)</explosionColorEdge>
    <soundExplosion>Explosion_EMP</soundExplosion>
    <combatLogRules>Damage_Bomb</combatLogRules>
</DamageDef>
    
<!--■■■■■■■■■■■■■■■■■■VANUSOVEREIGNTYENERGYBULLET-VANUSOVEREIGNTYENERGYBULLET-VANUSOVEREIGNTYENERGYBULLET■■■■■-->   
<DamageDef Name="VSENERGYBULLETBASE">
<defName>VSENERGYBULLET</defName>
    <label>VS energy bullet</label>
    <workerClass>DamageWorker_AddInjury</workerClass>
    <externalViolence>true</externalViolence>
    <deathMessage>{0} has been shot to death.</deathMessage>
    <hediff>Burn</hediff>
    <hediffSkin>Burn</hediffSkin>
    <hediffSolid>Gunshot</hediffSolid>
    <harmAllLayersUntilOutside>true</harmAllLayersUntilOutside>
    <impactSoundType>Blunt</impactSoundType>
    <armorCategory>Sharp</armorCategory>
    <defaultDamage>10</defaultDamage>
    <makesAnimalsFlee>true</makesAnimalsFlee>
</DamageDef>
</Defs>
